{% extends 'base.html.twig' %}

{% block title %}My Addresses{% endblock %}

{% block breadcrumb %}
    {% include 'partials/_breadcrumb.html.twig' with {
        items: [
            { label: 'Home', url: path('app_home') },
            { label: 'My Addresses' }
        ]
    } %}
{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">My Addresses</h2>
    <a href="{{ path('app_address_new') }}" class="btn btn-success">+ Add New Address</a>
</div>

{% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{% endfor %}

<div class="table-responsive">
    <table class="table table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th scope="col">Type</th>
                <th scope="col">Street</th>
                <th scope="col">City</th>
                <th scope="col">Country</th>
                <th scope="col">Phone</th>
                <th scope="col" class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for address in addresses %}
                <tr>
                    <td>{{ address.type|capitalize }}</td>
                    <td>{{ address.street }}</td>
                    <td>{{ address.city }}</td>
                    <td>{{ address.country }}</td>
                    <td>{{ address.phone ?: '-' }}</td>
                    <td class="text-end">
                        <a href="{{ path('app_address_edit', { id: address.id }) }}" class="btn btn-sm btn-primary">Edit</a>
                        <form method="post" action="{{ path('app_address_delete', { id: address.id }) }}" class="d-inline-block" onsubmit="return confirm('Delete this address?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_address_' ~ address.id) }}">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center text-muted">No addresses found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
