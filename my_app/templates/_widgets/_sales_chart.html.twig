{% set ranges = ranges|default([7, 30, 90]) %}
{% set categories = categories|default([]) %}
{% set chart_id = chart_id|default('chart_' ~ random()) %}
<div class="card p-3 shadow-sm mb-4 h-100"
     data-controller="chart"
     data-chart-labels-value="{{ labels|json_encode|e('html_attr') }}"
     data-chart-data-value="{{ data|json_encode|e('html_attr') }}"
     data-chart-categories-value="{{ categories|json_encode|e('html_attr') }}"
     {% if url is defined %}data-chart-url-value="{{ url|e('html_attr') }}"{% endif %}>
  <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
    <h6 class="mb-0">{{ title|default('Sales (Last 30 Days)') }}</h6>
    {% if url is defined %}
      <div class="btn-group btn-group-sm" role="group" aria-label="Sales range selector">
        {% for range in ranges %}
          <button type="button" class="btn btn-outline-secondary" data-range="{{ range }}">{{ range }}d</button>
        {% endfor %}
      </div>
    {% endif %}
  </div>
  {% if categories is not empty %}
    <div class="row g-2 align-items-end mb-3">
      <div class="col-sm-6">
        <label class="form-label small mb-1" for="{{ chart_id }}_category">{{ 'Category'|trans }}</label>
        <select id="{{ chart_id }}_category"
                class="form-select form-select-sm"
                data-chart-target="category"
                data-action="change->chart#onCategoryChange">
          <option value="all">{{ 'All categories'|trans }}</option>
          {% for category in categories %}
            <option value="{{ category.id }}">{{ category.name }}</option>
          {% endfor %}
        </select>
      </div>
      <div class="col-sm-6">
        <label class="form-label small mb-1" for="{{ chart_id }}_product">{{ 'Product'|trans }}</label>
        <select id="{{ chart_id }}_product"
                class="form-select form-select-sm"
                data-chart-target="product"
                data-action="change->chart#onProductChange"
                disabled>
          <option value="all">{{ 'Select a category first'|trans }}</option>
        </select>
      </div>
    </div>
  {% endif %}
  <canvas height="100"></canvas>
</div>
