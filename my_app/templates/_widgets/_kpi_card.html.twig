{% set numeric = numeric_value|default(value) %}
{% set decimals = decimals|default(0) %}
{% set suffix = suffix|default('') %}
{% set hasLink = link is defined and link %}
<div class="{{ col_class|default('col-md-3') }}">
  <{{ hasLink ? 'a' : 'div' }}
    {% if hasLink %}href="{{ link|e('html_attr') }}"{% endif %}
    class="card p-3 text-center shadow-sm h-100{% if hasLink %} text-reset text-decoration-none{% endif %}"
  >
    {% if icon is defined %}
      <div class="fs-2 mb-2" aria-hidden="true">{{ icon }}</div>
    {% endif %}
    <h6 class="text-muted mb-1">{{ label }}</h6>
    <p class="fs-4 fw-bold mb-0">
      <span
        data-controller="kpi"
        data-kpi-end-value="{{ numeric|e('html_attr') }}"
        data-kpi-decimals-value="{{ decimals|e('html_attr') }}"
        {% if suffix %}data-kpi-suffix-value="{{ suffix|e('html_attr') }}"{% endif %}
      >0</span>
    </p>
  </{{ hasLink ? 'a' : 'div' }}>
</div>
