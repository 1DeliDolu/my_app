{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
<div class="product-page-container container px-4">
    <div class="row g-4 product-page-layout">
        <aside class="product-sidebar col-12 col-lg-3 col-xl-2">
            <div class="position-sticky top-nav-offset">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white border-0">
                        <h2 class="h6 mb-0 text-uppercase text-muted">Categories</h2>
                        <small class="text-muted">Products</small>
                    </div>
                    <div class="list-group list-group-flush">
                        {% set categoryIndex = 0 %}
                        {% for categoryName, products in groupedProducts %}
                            {% set slug = (categoryName|lower)
                                |replace({' ':'-', '/':'-', '&':'-', ',':'-', '.':'-', '\'':'', '"':'', ':':'-'}) %}
                            <a class="list-group-item list-group-item-action {% if loop.first %}active{% endif %}"
                               href="#{{ slug }}"
                               data-category-anchor>
                                {{ categoryName }}
                                <span class="badge bg-secondary-subtle text-secondary-emphasis rounded-pill ms-2">
                                    {{ products|length }}
                                </span>
                            </a>
                            {% set categoryIndex = categoryIndex + 1 %}
                        {% endfor %}
                    </div>
                    <div class="card-footer bg-white border-0">
                        <a href="{{ path('app_product_new') }}" class="btn btn-outline-primary w-100 btn-sm">
                            + Yeni Ürün
                        </a>
                    </div>
                </div>
            </div>
        </aside>

        <section class="product-grid col-12 col-lg-9 col-xl-10">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
                <div>
                    <h2 class="h4 mb-1 text-dark">Products</h2>
                    <p class="text-muted mb-0">Browse categories and manage your product catalogue.</p>
                </div>
            </div>
            {% if groupedProducts is empty %}
                <div class="text-center text-muted py-5 border rounded-4">
                    No products found.
                </div>
            {% else %}
                {% for categoryName, products in groupedProducts %}
                    {% set slug = (categoryName|lower)
                        |replace({' ':'-', '/':'-', '&':'-', ',':'-', '.':'-', '\'':'', '"':'', ':':'-'}) %}
                    <article id="{{ slug }}" class="mb-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h3 class="h5 mb-0">{{ categoryName }}</h3>
                            <span class="badge bg-light text-secondary border">
                                {{ products|length }} ürün
                            </span>
                        </div>
                        <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
                            {% for product in products %}
                                <div class="col">
                                    <div class="card product-card h-100">
                                        {% set cardImage = resolve_image_path(product.image) ?? 'https://via.placeholder.com/400x260?text=Product' %}
                                        <img src="{{ cardImage }}" alt="{{ product.name }}" class="card-img-top" style="object-fit: cover; height: 180px;">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <h5 class="card-title mb-0">{{ product.name }}</h5>
                                                {% set stockValue = product.stock is not null ? product.stock + 0 : null %}
                                                <span class="badge bg-primary-subtle text-primary-emphasis">Stok: {{ stockValue is not null ? stockValue : 'N/A' }}</span>
                                            </div>
                                            <p class="card-text text-muted small mb-0">
                                                {% set description = product.description ?? '' %}
                                                {{ description|slice(0, 140) }}{% if description|length > 140 %}…{% endif %}
                                            </p>
                                            <div class="d-flex justify-content-between align-items-center mt-3">
                                                <span class="fw-semibold fs-6">{{ product.price|number_format(2) }} ₺</span>
                                                <button
                                                    type="button"
                                                    class="btn btn-success btn-sm add-to-cart"
                                                    data-product-id="{{ product.id }}"
                                                    data-product-name="{{ product.name|e('html_attr') }}"
                                                    data-cart-url="{{ path('app_cart_add', {id: product.id}) }}"
                                                    data-quantity="1"
                                                >
                                                    Sepete Ekle
                                                </button>
                                            </div>
                                        </div>
                                        <div class="card-footer bg-white border-0 d-flex flex-column gap-2">
                                            <div class="btn-group" role="group">
                                                <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-sm btn-outline-primary">
                                                    İncele
                                                </a>
                                                <a href="{{ path('app_product_edit', {id: product.id}) }}" class="btn btn-sm btn-outline-secondary">
                                                    Düzenle
                                                </a>
                                            </div>
                                            {{ include('product/_delete_form.html.twig', {
                                                product: product,
                                                button_label: 'Sil',
                                                button_class: 'btn btn-sm btn-outline-danger'
                                            }) }}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </article>
                {% endfor %}
            {% endif %}
        </section>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
    document.addEventListener('DOMContentLoaded', function () {
        const categoryLinks = document.querySelectorAll('[data-category-anchor]');
        if (!categoryLinks.length) {
            return;
        }

        categoryLinks.forEach((link) => {
            link.addEventListener('click', () => {
                categoryLinks.forEach((item) => item.classList.remove('active'));
                link.classList.add('active');
            });
        });
    });
    </script>
{% endblock %}
