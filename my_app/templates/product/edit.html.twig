{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mb-4">
            <div class="col-12 d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0">Ürünü Düzenle</h1>
                    <small class="text-muted d-block">Buradan ürün bilgilerini güncelleyebilirsiniz.</small>
                </div>
                <div>
                    <a href="{{ path('app_product_index') }}" class="btn btn-outline-secondary btn-sm">Listeye Dön</a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        {{ include('product/_form.html.twig', {'button_label': 'Güncelle'}) }}
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        {% if product is defined and product.image %}
                            <img src="{{ product.image }}" alt="{{ product.name }}" class="img-fluid mb-3" style="max-height:200px; object-fit:contain;">
                        {% else %}
                            <img src="{{ asset('images/placeholder.png') }}" alt="placeholder" class="img-fluid mb-3" style="max-height:200px; object-fit:contain;">
                        {% endif %}

                        <h5 class="card-title mb-1">{{ product.name is defined ? product.name : 'Yeni Ürün' }}</h5>
                        {% if product is defined and product.createdAt is defined and product.createdAt %}
                            <p class="text-muted small mb-0">Oluşturuldu: {{ product.createdAt|date('d M Y H:i') }}</p>
                        {% else %}
                            <p class="text-muted small mb-0">Henüz oluşturulmadı.</p>
                        {% endif %}

                        {# updatedAt should be handled server-side; do not show it here #}

                        <div class="mt-3">
                            {{ include('product/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
