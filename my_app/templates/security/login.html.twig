{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block breadcrumb %}
    {% include 'partials/_breadcrumb.html.twig' with {
        items: [
            { label: 'Home', url: path('app_home') },
            { label: 'Login' }
        ]
    } %}
{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h1 class="h4 mb-4 text-center">Sign in</h1>

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}

                {% if error %}
                    <div class="alert alert-danger" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form method="post" action="{{ path('app_login') }}">
                    <div class="mb-3">
                        <label for="inputUsername" class="form-label">Email address</label>
                        <input
                            type="email"
                            name="_username"
                            id="inputUsername"
                            class="form-control"
                            value="{{ last_username }}"
                            autocomplete="email"
                            required
                            autofocus
                        >
                    </div>

                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">Password</label>
                        <input
                            type="password"
                            name="_password"
                            id="inputPassword"
                            class="form-control"
                            autocomplete="current-password"
                            required
                        >
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="d-grid">
                        <button class="btn btn-primary" type="submit">
                            Sign in
                        </button>
                    </div>
                </form>
                <p class="mt-3 text-center">
                    Don't have an account?
                    <a href="{{ path('app_register') }}">Register</a>
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
