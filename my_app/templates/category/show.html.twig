{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-2">
        <div class="list-group">
            <a class="list-group-item list-group-item-action active">Categories</a>
            {% for cat in categories %}
                <a href="{{ path('app_category_show', {slug: cat.slug}) }}" class="list-group-item list-group-item-action{% if cat.slug == category.slug %} active{% endif %}">
                    {{ cat.name }}
                </a>
            {% endfor %}
        </div>
    </div>

    <div class="col-md-8">
        <h2 class="mb-4">{{ category.name }}</h2>
        <p class="text-muted">{{ category.description }}</p>

        <div class="row">
            {% for product in products %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        {% if product.image %}
                            <img src="{{ product.image }}" class="card-img-top" alt="{{ product.name }}">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text text-muted">{{ product.price }} â‚º</p>
                            <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-primary btn-sm">Details</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p>No products found in this category.</p>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
