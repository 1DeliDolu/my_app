<div class="row">
    {% for product in products %}
        <div class="col-sm-6 col-xl-4 mb-4">
            <div class="card product-card h-100">
                {% set cardImage = resolve_image_path(product.image) ?? 'https://via.placeholder.com/400x260?text=Product' %}
                <a href="{{ path('app_product_show', {id: product.id}) }}">
                    <img src="{{ cardImage }}" class="card-img-top" alt="{{ product.name }}" loading="lazy">
                </a>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">
                        <a href="{{ path('app_product_show', {id: product.id}) }}" class="stretched-link text-decoration-none text-dark">{{ product.name }}</a>
                    </h5>
                    {% if product.description is defined and product.description %}
                        <p class="card-text text-muted" title="{{ product.description|striptags }}">
                            {{ product.description|striptags|slice(0, 100) }}{% if product.description|striptags|length > 100 %}...{% endif %}
                        </p>
                    {% endif %}
                    <div class="mt-auto">
                        {% set stockValue = product.stock is not null ? product.stock + 0 : null %}
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">{{ product.price|number_format(2, ',', '.') }} â‚º</small>
                            <span class="badge bg-light text-success border border-success-subtle">
                                {{ stockValue is not null ? 'Stock: ' ~ stockValue : 'In Stock' }}
                            </span>
                        </div>
                        <div class="d-flex gap-2 mt-3">
                            <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-outline-primary btn-sm flex-fill">Details</a>
                            <button
                                type="button"
                                class="btn btn-success btn-sm add-to-cart flex-fill"
                                data-product-id="{{ product.id }}"
                                data-product-name="{{ product.name|e('html_attr') }}"
                                data-cart-url="{{ path('app_cart_add', {id: product.id}) }}"
                                data-quantity="1"
                            >
                                Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <p>No products found yet.</p>
    {% endfor %}
</div>
