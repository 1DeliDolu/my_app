{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<div class="product-page-container container px-4">
    <div class="row g-4 product-page-layout">
        <aside class="product-sidebar col-12 col-lg-3 col-xl-2">
            <div class="position-sticky top-nav-offset">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white border-0">
                        <h2 class="h6 mb-0 text-uppercase text-muted">Pages</h2>
                    </div>
                    <div class="list-group list-group-flush">
                        <a class="list-group-item list-group-item-action active" href="{{ path('app_category_index') }}">
                            All Categories
                        </a>
                        <a class="list-group-item list-group-item-action" href="{{ path('app_home') }}">
                            All Products
                        </a>
                    </div>
                </div>
            </div>
        </aside>

        <section class="col-12 col-lg-9 col-xl-10">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
                <div>
                    <h2 class="h4 mb-1 text-dark">Categories</h2>
                    <p class="text-muted mb-0">Explore all product categories available in the store.</p>
                </div>
            </div>

            <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
                {% for category in categories %}
                    <div class="col">
                        <div class="card product-card h-100">
                            <div class="card-body">
                                <span class="badge bg-primary-subtle text-primary-emphasis mb-2">{{ categoryCounts[category.slug]|default(0) }} ürün</span>
                                <h5 class="card-title">{{ category.name }}</h5>
                                <p class="card-text text-muted small">
                                    {{ category.description|default('No description provided.') }}
                                </p>
                                <div class="d-flex gap-2">
                                    <a href="{{ path('app_category_show', { slug: category.slug }) }}" class="btn btn-outline-primary btn-sm flex-fill">View</a>
                                    <a href="{{ path('app_home') }}#{{ category.slug }}" class="btn btn-outline-secondary btn-sm flex-fill">Browse</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12">
                        <div class="text-center text-muted py-5 border rounded-4">
                            No categories found.
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>
    </div>
</div>
{% endblock %}
