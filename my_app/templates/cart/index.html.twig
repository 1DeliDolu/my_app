{% extends 'base.html.twig' %}
{% block title %}ðŸ›’ My Cart{% endblock %}

{% block body %}
<div class="container px-4">
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center gap-3 mb-4">
        <div>
            <h2 class="fw-semibold mb-1 text-dark">ðŸ›’ My Cart</h2>
            <p class="text-muted mb-0">Review the items in your basket before checkout.</p>
        </div>
        {% if items|length > 0 %}
            <div class="d-flex gap-2">
                <a href="{{ path('app_cart_clear') }}" class="btn btn-outline-danger">Clear Cart</a>
                <a href="{{ path('app_checkout') }}" class="btn btn-success">Proceed to Checkout â†’</a>
            </div>
        {% endif %}
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'success' ? 'success' : (label == 'warning' ? 'warning' : 'info') }} alert-dismissible fade show shadow-sm mb-4" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead class="table-light text-secondary text-uppercase small">
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Subtotal</th>
                            <th scope="col" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in items %}
                            <tr>
                                <td class="fw-semibold">{{ item.product.name }}</td>
                                <td>{{ item.unitPrice|number_format(2) }} â‚º</td>
                                <td>
                                    <form action="{{ path('app_cart_update', {id: item.product.id}) }}" method="post" class="d-flex align-items-center gap-2">
                                        <input type="number" name="quantity" value="{{ item.quantity }}" min="0" class="form-control form-control-sm" style="width: 90px;">
                                        <button class="btn btn-sm btn-outline-primary" type="submit">Update</button>
                                    </form>
                                </td>
                                <td>{{ item.subtotal|number_format(2) }} â‚º</td>
                                <td class="text-end">
                                    <a href="{{ path('app_cart_remove', {id: item.product.id}) }}" class="btn btn-sm btn-outline-danger">
                                        Remove
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center text-muted py-5">
                                    <div class="py-4">
                                        <h5 class="fw-semibold mb-1">Your cart is empty</h5>
                                        <p class="mb-3">Browse products and add items to your cart.</p>
                                        <a href="{{ path('app_home') }}" class="btn btn-primary btn-sm">Go shopping</a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        {% if items|length > 0 %}
            <div class="card-footer bg-light border-0 d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                <h4 class="mb-0">Total: {{ total|number_format(2) }} â‚º</h4>
                <div class="d-flex gap-2">
                    <a href="{{ path('app_cart_clear') }}" class="btn btn-outline-danger">Clear Cart</a>
                    <a href="{{ path('app_checkout') }}" class="btn btn-success">Proceed to Checkout â†’</a>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
